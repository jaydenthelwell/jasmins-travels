<div class="contact-container">
  <%= render 'shared/navbar' %>
  <section id="section2" class="color-bg" style="background-color: #032B22;">
    <div class="banner">
      <div>
        <h1 class="blog-title">How can we help?</h1>
      </div>
      <div class="blog-photo-div">
        <%= image_tag "blogs_about_dogs.png", alt:"Picture of a Chihuaha sticking it's tongue out", class: "w-100 blog-photo" %>
      </div>
    </div>
  </section>
  <div class="form-container gap-5">
    <div class="text-container">
      <h1 class="mb-2 header wanstead-wags-title titles" style="text-align: left; margin: 0; color: #032B22;">Book a Meet & Greet</h1>
      <p style="color: #032B22; font-size: 24px;">Please fill in the form to book a meet & greet or for any other inquiries. Include important details such as preferred days for walks, your dogâ€™s breed, age, and any other relevant information in the message.</p> <!-- Added a message -->
    </div>

    <div class="pink-background contact-form">
      <%= form_with model: @contact_form, url: contact_forms_path, local: true do |form| %>
        <div class="form-group">
          <%= form.label :service, "What service(s) are you looking for?" %>
          <%= form.select :service, options_for_select(['Group Dog Walks', 'Solo Dog Walks', 'Other']) %>
        </div>

        <div class="form-group">
          <%= form.label :name, "Name" %>
          <%= form.text_field :name, placeholder: "First and Last Name" %>
        </div>

        <div class="form-group">
          <%= form.label :phone, "Phone" %>
          <%= form.telephone_field :phone %>
        </div>

        <div class="form-group">
          <%= form.label :email, "Email" %>
          <%= form.email_field :email %>
        </div>

        <div class="form-group">
          <%= form.label :postcode, "Your Postcode" %>
          <%= form.text_field :postcode %>
        </div>

        <div class="form-group">
          <%= form.label :message, "Message (please include your preferred days for walks, dog's breed, age, and any other important details)" %> <!-- Updated label -->
          <%= form.text_area :message, placeholder: "Include your dog's breed, age, and preferred days for walks." %> <!-- Updated placeholder -->
        </div>

        <div class="form-group">
          <%= form.check_box :gdpr_consent %>
          <%= form.label :gdpr_consent, "I consent to my data being processed in accordance with GDPR." %>
        </div>

        <%= form.submit "Submit", class: "mt-0 button", style:"font-size: 19px;" %>
      <% end %>
    </div>
  </div>
</div>
